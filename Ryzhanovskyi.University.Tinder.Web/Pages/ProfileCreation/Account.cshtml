@page
@using Ryzhanovskyi.University.Tinder.Models.Models
@model Ryzhanovskyi.University.Tinder.Web.Pages.Profile.AccountModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Account Cabinet</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        /* Custom CSS */
        .card {
            margin-top: 20px;
        }

        .card-title {
            font-size: 20px;
            color: #333;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-group p {
            margin-bottom: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-4">Account Cabinet</h1>
        <hr />

        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">User Details</h5>
                        <div class="form-group">
                            <label asp-for="User.Email"></label>
                            <p>@Model.User.Email</p>
                        </div>
                        <div class="form-group">
                            <label asp-for="User.UserName"></label>
                            <p>@Model.User.UserName</p>
                        </div>
                        <div class="form-group">
                            <label asp-for="User.Age"></label>
                            <p>@Model.User.Age</p>
                        </div>
                        <div class="form-group">
                            <label asp-for="User.Gender"></label>
                            <p>@Model.User.Gender</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
