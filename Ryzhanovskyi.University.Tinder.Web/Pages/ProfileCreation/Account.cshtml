@page
@using Ryzhanovskyi.University.Tinder.Models.Models
@model Ryzhanovskyi.University.Tinder.Web.Pages.UserProfileModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Account Cabinet</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        .card {
            margin-top: 20px;
        }

        .card-title {
            font-size: 20px;
            color: #333;
        }

        .form-group label {
            font-weight: bold;
        }

        .form-group p {
            margin-bottom: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-4">Account Cabinet</h1>
        <hr />

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Gender</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Age</td>
                <td>@user.Gender</td>
            </tr>
        }
    </tbody>
</table>

</body>
</html>
